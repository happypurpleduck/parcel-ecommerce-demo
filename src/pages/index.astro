---
import { TopBarSelector } from "../components/top-bar/selector";
import Layout from "../layouts/layout.astro";
import { branches_atom } from "../store/shared/branches";
import { branch_id_atom } from "../store/shared/selected-branch";

branches_atom.get();
const branch_id = branch_id_atom.get();
if (branch_id) {
	const url = Astro.url;
	console.log({ url });
	url.pathname = `/${branch_id}`;
	return Astro.redirect(url.toString());
}
---

<Layout>
	<TopBarSelector dialog_only force_open client:load />
</Layout>
